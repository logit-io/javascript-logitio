{
  "env": {
    "browser": 1
  },

  "globals": {
    "module": 1,
    "describe": 1,
    "it": 1,
    "require": 1,
    "console": 1,
    "exports": 1,
    "define": 1,
    "beforeEach": 1,
    "afterEach": 1
  },

  "rules": {
    "global-strict":              1,
    "no-console":                 1,
    "block-scoped-var":           2,
    "brace-style":              [ 2, "1tbs" ],
    "camelcase":                  1,
    "curly":                      2,
    "eol-last":                   2,
    "eqeqeq":                   [ 2, "smart" ],
    "max-depth":                [ 1, 3 ],
    "max-statements":           [ 1, 15 ],
    "max-len":                  [ 1, 160 ],
    "new-cap":                    1,
    "no-extend-native":           2,
    "no-mixed-spaces-and-tabs":   2,
    "no-trailing-spaces":         2,
    "no-use-before-define":     [ 2, "nofunc" ],
    "no-unused-vars":             1,
    "quotes":                   [ 2, "single", "avoid-escape" ],
    "semi":                     [ 2, "always" ],
    "space-after-keywords":     [ 2, "always" ],
    "space-in-brackets":        [ 2, "always" ]
  }
}
